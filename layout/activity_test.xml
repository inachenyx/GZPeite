<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picture9"
    tools:context=".thirdActivity">

    <Button
        android:id="@+id/button_yingguangjiance1"
        android:layout_width="363dp"
        android:layout_height="118dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/buttonshape"
        android:fontFamily="@font/weiruan"
        android:text="启动动力泵"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_guanbiyingguangjiance1"
        android:layout_width="361dp"
        android:layout_height="125dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="92dp"
        android:background="@drawable/buttonshape"
        android:fontFamily="@font/weiruan"
        android:text="关闭动力泵"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_return1"
        android:layout_width="110dp"
        android:layout_height="51dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/buttonshape"
        android:text="返回"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_sendnumber1"
        android:layout_width="176dp"
        android:layout_height="55dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="280dp"
        android:background="@drawable/buttonshape"
        android:fontFamily="@font/weiruan"
        android:text="发送"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_numberinput1"
        android:layout_width="358dp"
        android:layout_height="124dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="580dp"
        android:hint="请输入温度"
        android:inputType="number"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>